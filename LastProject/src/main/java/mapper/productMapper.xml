<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">
	
	<resultMap type="category" id="category">
		<result property="cId" column="CID" />
		<result property="cName" column="CNAME" />
	</resultMap>
	<resultMap type="store" id="store">
		<result property="sId" column="SID" />
		<result property="sName" column="SNAME" />
	</resultMap>
	<resultMap type="users" id="users">
		<result property="mName" column="MNAME" />
		<result property="userName" column="USERNAME" />
	</resultMap>
	<resultMap type="review" id="review">
		<result property="rId" column="RID" />
		<result property="rContent" column="RCONTENT" />
		<result property="rWriter" column="RWRITER" />
		<result property="rRating" column="RRATING" />
	</resultMap>

	<!-- 상품 정보 가져오기 -->
	<select id="selectProduct" parameterType="product"
		resultType="product">
		select * from product
	</select>
	
	<!-- 상품 검색하기 -->
	<select id="searchProduct" parameterType="product"
		resultType="product">
		select * from product
		<if test="keyword != null and keyword != '' ">
			where pname like '%'||#{keyword}||'%'
		</if>
	</select>
	
	<!-- 선택된 상품 정보 가져오기-->
	<select id="productInfo" 	parameterType="product" resultType="product">
		select s.*,p.* from product p, store s
		<if test="pName != null and pName != '' ">
			where p.sid=s.sid and p.pname=#{pName} and p.pprice = #{pPrice}
		</if>
	</select>
	
	<!-- 선택된 상품 옵션 가져오기-->
	<select id="productOption" 	parameterType="product" resultType="product">
		select pprice,poption1 from product
		<if test="pName != null and pName != '' ">
			where pname=#{pName}
		</if>
	</select>
	
	<!-- 카테고리 정보 가져오기 -->
	<select id="storeCategory" resultType="category">
		select * from category
	</select>

	<!-- 상품 카테고리별로 분류 -->
	<select id="searchCategory" parameterType="category"
		resultType="product">
		select p.* from product p,store s,category c
		<if test="cName != null and cName != '' ">
			where (c.cid=s.cid and p.sid = s.sid)
			and c.cname=#{cName}
		</if>
	</select>
	
	<!-- 점포 카테고리별로 분류 -->
	<select id="searchCategory_store" parameterType="category"
		resultType="store">
		select s.* from store s,category c
		<if test="cName != null and cName != '' ">
			where c.cid=s.cid and c.cname=#{cName}
		</if>
	</select>
	
	<!-- 선택된 점포 정보 가져오기-->
	<select id="storeInfo" 	resultType="store">
		select * from store
		<if test="sName != null and sName != '' ">
			where sname=#{sName}
		</if>
	</select>
	
	<!-- 리뷰 정보 넣기 -->
	<insert id="insertReview" parameterType="review" >
		insert into review(rid,rdate,rcontent,rwriter,rrating)
		values(seq_rid.nextval,sysdate,#{rContent},#{rWriter},#{rRating})
	</insert>
	
	<!-- 리뷰 가져오기 -->
	<select id="selectReview" parameterType="review"	resultType="review">
		select * from review
		
	</select>
	
	<!-- 상점등록페이지 이동할때 카테고리이름 가져오기  -->
	<select id="selectMarket" parameterType="category"	resultType="category">
		select * from category
		
	</select>
	<!-- 상점 등록하기 -->
	<insert id="insertStore" parameterType="store" >
		insert into store(sid,cid,mkid,sname,stime,sdetail,stel,saddr,simg1,simg3,delyn)
		values(seq_sid.nextval,#{cId},#{mKId},#{sName},#{sTime},#{sDetail},#{sTel},#{sAddr},#{sImg1},#{sImg3},'N')
	</insert>
	
	<!-- 상품 등록하기 -->
	<insert id="insertProduct" parameterType="product" >
		insert into product(pid,sid,pname,pprice,poption1,pimg1,pdetail,delyn,mkid)
		values(seq_pid.nextval,#{sId},#{pName},#{pPrice},#{pOption1},#{pImg1},#{pDetail},'N',#{mkId})
	</insert>
	
	<!-- 카테고리 이름 통해 cid 구하기  -->
	<select id="findcid" parameterType="String" resultType="int">
		select cid from category where cname=#{cName}
	</select>
	
	<!-- 상점 이름 통해 상점 id 구하기  -->
	<select id="findsid" parameterType="String" resultType="int">
		select sid from store where sname=#{sName}
	</select>
	
</mapper>
