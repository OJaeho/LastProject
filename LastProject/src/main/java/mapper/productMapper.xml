<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">
	
	<resultMap type="category" id="category">
		<result property="cId" column="CID" />
		<result property="cName" column="CNAME" />
	</resultMap>
	<resultMap type="store" id="store">
		<result property="sId" column="SID" />
		<result property="sName" column="SNAME" />
	</resultMap>

	<!-- 상품 정보 가져오기 -->
	<select id="selectProduct" parameterType="product"
		resultType="product">
		select * from product
	</select>
	
	<!-- 상품 검색하기 -->
	<select id="searchProduct" parameterType="product"
		resultType="product">
		select * from product
		<if test="keyword != null and keyword != '' ">
			where pname like '%'||#{keyword}||'%'
		</if>
	</select>
	
	<!-- 선택된 상품 정보 가져오기-->
	<select id="productInfo" 	parameterType="product" resultType="product">
		select s.*,p.* from product p, store s
		<if test="pName != null and pName != '' ">
			where p.sid=s.sid and p.pname=#{pName} and p.pprice = #{pPrice}
		</if>
	</select>
	
	<!-- 선택된 상품 옵션 가져오기-->
	<select id="productOption" 	parameterType="product" resultType="product">
		select pprice,poption1 from product
		<if test="pName != null and pName != '' ">
			where pname=#{pName}
		</if>
	</select>
	
	<!-- 카테고리 정보 가져오기 -->
	<select id="storeCategory" resultType="category">
		select * from category
	</select>

	<!-- 상품 카테고리별로 분류 -->
	<select id="searchCategory" parameterType="category"
		resultType="product">
		select p.* from product p,store s,category c
		<if test="cName != null and cName != '' ">
			where (c.cid=s.cid and p.sid = s.sid)
			and c.cname=#{cName}
		</if>
	</select>
	
	<!-- 점포 카테고리별로 분류 -->
	<select id="searchCategory_store" parameterType="category"
		resultType="store">
		select s.* from store s,category c
		<if test="cName != null and cName != '' ">
			where c.cid=s.cid and c.cname=#{cName}
		</if>
	</select>
	
	<!-- 선택된 점포 정보 가져오기-->
	<select id="storeInfo" 	resultType="store">
		select * from store
		<if test="sName != null and sName != '' ">
			where sname=#{sName}
		</if>
	</select>

</mapper>
