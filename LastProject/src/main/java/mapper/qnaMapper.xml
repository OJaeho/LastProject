<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="QnA">
	  <select id="getQnAList" resultType="qna">
      <![CDATA[
      SELECT *
      FROM QNA
      ]]>
   </select>
   
   <insert id="insertQnA" parameterType="qna">
   INSERT INTO QNA
   (qId, userName, qTitle, qlContent, qDate, qCate)
   VALUES(
   seq_qId.nextval,#{userName},#{qTitle},#{qlContent},sysdate,#{qCate}
   )   
   </insert>
   
   	<select id="getQnA" parameterType="qna" resultType="qna">
		<![CDATA[
		SELECT *
		FROM QNA
		WHERE qId = #{qId}
		]]>
	</select>
	
	<delete id="deleteQnA" parameterType="qna">
		<![CDATA[
		DELETE QNA
		WHERE qId = #{qId}
		]]>
	</delete>
	
</mapper>
